jQuery(document).ready(function(){
    var menuTxt = jQuery(jQuery('.mt_hamb_menu .inner-menu .menu-item.menu-item-has-children').children()[0]).text();
    jQuery(jQuery('.mt_hamb_menu .inner-menu .menu-item.menu-item-has-children').children()[0]).html('+ '+menuTxt);
    jQuery(jQuery('.virtual-tour-mob').children()[0]).html('+ '+menuTxt);
    jQuery('.mt_hamb_menu .menu-item.menu-item-has-children > a').on('click', function(e){
        e.preventDefault();
        jQuery(this).parent().find('.sub-menu').is(':visible') ? jQuery(this).removeClass('open') : jQuery(this).addClass('open');
        jQuery(this).parent().find('.sub-menu').slideToggle(400);
    });
    if ("ontouchstart" in document.documentElement)
    {
        jQuery('#menu-header-menu .menu-item-has-children > a').on('touchstart', function(e){
            e.preventDefault();
            if(jQuery('#menu-header-menu .menu-item-has-children .sub-menu').is(':visible')) {
                jQuery(this).parent().find('.sub-menu').slideUp(400);
            } else {
                jQuery(this).parent().find('.sub-menu').slideDown(400);
            }
        });
    } else {
        jQuery('#menu-header-menu .menu-item-has-children > a').on('mouseover', function(e){
            e.preventDefault();
            jQuery(this).parent().find('.sub-menu').slideDown(400);
        });
        jQuery(document).on("click", function(e) {
            if (!jQuery(e.target).closest('#menu-header-menu .menu-item-has-children .sub-menu').length && !jQuery(e.target).closest('#menu-header-menu .menu-item-has-children .sub-menu li').length) {
                if (jQuery('#menu-header-menu .menu-item-has-children .sub-menu').is(':visible')) {
                    jQuery('#menu-header-menu .menu-item-has-children .sub-menu').slideUp(400);
                }
            }
        });
    }
});